<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.tu.courier.controller.ClientFormController"
      alignment="CENTER" spacing="15" prefWidth="350">

    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <Text fx:id="titleText" text="Данни за Клиент" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TextField fx:id="nameField" promptText="Име и Фамилия"/>
    <TextField fx:id="usernameField" promptText="Потребителско име"/>
    <TextField fx:id="emailField" promptText="Email адрес"/>
    <TextField fx:id="phoneField" promptText="Телефонен номер"/>

    <PasswordField fx:id="passwordField" promptText="Парола (остави празно ако не сменяш)"/>

    <Button text="ЗАПИШИ" onAction="#onSave" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
    <Label fx:id="statusLabel" textFill="RED" wrapText="true"/>
</VBox>