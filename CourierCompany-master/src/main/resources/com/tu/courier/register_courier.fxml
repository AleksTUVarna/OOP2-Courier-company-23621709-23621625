<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="15.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.tu.courier.controller.RegisterCourierController"
      prefWidth="350" prefHeight="400">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20"/>
    </padding>

    <Text text="Регистрация на Куриер" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TextField fx:id="nameField" promptText="Три имена"/>
    <TextField fx:id="usernameField" promptText="Потребителско име"/>
    <PasswordField fx:id="passwordField" promptText="Парола"/>

    <Button text="Запиши Куриер" onAction="#onRegisterClick"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>

    <Label fx:id="statusLabel"/>
</VBox>