<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.tu.courier.controller.CourierFormController"
      alignment="CENTER" spacing="15" prefWidth="350">

    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <Text fx:id="titleText" text="Данни за Куриер" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TextField fx:id="nameField" promptText="Три имена"/>
    <TextField fx:id="usernameField" promptText="Потребителско име"/>
    <PasswordField fx:id="passwordField" promptText="Парола (остави празно, ако не сменяш)"/>

    <Label text="Прикрепи към Офис:"/>
    <ComboBox fx:id="officeComboBox" prefWidth="300" promptText="-- Избери офис --"/>

    <Button text="ЗАПИШИ" onAction="#onSave" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
    <Label fx:id="statusLabel" textFill="RED"/>
</VBox>