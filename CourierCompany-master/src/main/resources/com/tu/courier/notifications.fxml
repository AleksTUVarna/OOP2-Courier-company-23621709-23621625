<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.tu.courier.controller.NotificationsController">

    <top>
        <HBox spacing="10">
            <padding>
                <Insets top="12" right="12" bottom="12" left="12"/>
            </padding>
            <Label text="Известия" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="Обнови" onAction="#onRefreshClick"/>
            <Button text="Маркирай всички като прочетени" onAction="#onMarkAllReadClick"/>
        </HBox>
    </top>

    <center>
        <TableView fx:id="notificationsTable">
            <columns>
                <TableColumn fx:id="colTime" text="Дата и час" prefWidth="180"/>
                <TableColumn fx:id="colMessage" text="Съобщение" prefWidth="560"/>
                <TableColumn fx:id="colRead" text="Прочетено" prefWidth="100"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <Label fx:id="statusLabel" text="">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </Label>
    </bottom>


</BorderPane>
