<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.tu.courier.controller.OfficeFormController"
      alignment="CENTER" spacing="15" prefWidth="350">

    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <Text fx:id="titleText" text="Данни за Офис" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TextField fx:id="nameField" promptText="Име (напр. Офис София Рила)"/>
    <TextField fx:id="cityField" promptText="Град"/>
    <TextField fx:id="addressField" promptText="Точен адрес"/>

    <Button text="ЗАПИШИ" onAction="#onSave" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
    <Label fx:id="statusLabel" textFill="RED"/>
</VBox>